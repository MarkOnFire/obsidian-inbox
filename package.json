{
  "name": "cloudflare-email-to-obsidian",
  "version": "1.0.0",
  "description": "Cloudflare Email Worker that converts forwarded emails to Obsidian markdown notes in R2",
  "main": "src/worker.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "cloudflare",
    "email",
    "obsidian",
    "markdown",
    "workers",
    "r2"
  ],
  "author": "Mark Riechers",
  "license": "MIT",
  "dependencies": {
    "postal-mime": "^2.7.3",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.9",
    "@cloudflare/workers-types": "^4.20241205.0",
    "@types/turndown": "^5.0.5",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.56.0"
  }
}
